{
  "name": "mikey",
  "displayName": "Mikey",
  "description": "PRD-driven development workflow extension",
  "version": "0.0.1",
  "publisher": "geekpulp",
  "repository": {
    "type": "git",
    "url": "https://github.com/geekpulp/Mikey"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:ralph.prdExplorer",
    "workspaceContains:**/prd.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ralph",
          "title": "Mikey",
          "icon": "resources/ralph-icon.svg"
        }
      ]
    },
    "views": {
      "ralph": [
        {
          "id": "ralph.prdExplorer",
          "name": "PRD Items",
          "canMoveViews": true,
          "canSelectMany": false
        }
      ]
    },
    "commands": [
      {
        "command": "ralph.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ralph.filterByStatus",
        "title": "Filter by Status",
        "icon": "$(filter)"
      },
      {
        "command": "ralph.filterByCategory",
        "title": "Filter by Category",
        "icon": "$(tag)"
      },
      {
        "command": "ralph.addItem",
        "title": "Add PRD Item",
        "icon": "$(add)"
      },
      {
        "command": "ralph.editItem",
        "title": "Edit PRD Item",
        "icon": "$(edit)"
      },
      {
        "command": "ralph.deleteItem",
        "title": "Delete PRD Item",
        "icon": "$(trash)"
      },
      {
        "command": "ralph.runItem",
        "title": "Run PRD Item",
        "icon": "$(play)"
      },
      {
        "command": "ralph.startWork",
        "title": "Start Work (Chat)",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ralph.markStepComplete",
        "title": "Mark Step Complete"
      },
      {
        "command": "ralph.runQueue",
        "title": "Run PRD Queue",
        "icon": "$(play-circle)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ralph.runItem",
          "when": "view == ralph.prdExplorer",
          "group": "navigation@1"
        },
        {
          "command": "ralph.runQueue",
          "when": "view == ralph.prdExplorer",
          "group": "navigation@2"
        },
        {
          "command": "ralph.filterByStatus",
          "when": "view == ralph.prdExplorer",
          "group": "navigation@2"
        },
        {
          "command": "ralph.filterByCategory",
          "when": "view == ralph.prdExplorer",
          "group": "navigation@3"
        },
        {
          "command": "ralph.refresh",
          "when": "view == ralph.prdExplorer",
          "group": "navigation@4"
        },
        {
          "command": "ralph.addItem",
          "when": "view == ralph.prdExplorer",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "ralph.startWork",
          "when": "view == ralph.prdExplorer && viewItem == prdItem",
          "group": "inline@1"
        },
        {
          "command": "ralph.runItem",
          "when": "view == ralph.prdExplorer && viewItem == prdItem",
          "group": "inline@2"
        },
        {
          "command": "ralph.editItem",
          "when": "view == ralph.prdExplorer && viewItem == prdItem",
          "group": "inline@3"
        },
        {
          "command": "ralph.deleteItem",
          "when": "view == ralph.prdExplorer && viewItem == prdItem",
          "group": "inline@4"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ralph.addItem",
        "key": "n",
        "when": "focusedView == ralph.prdExplorer"
      },
      {
        "command": "ralph.openItem",
        "key": "enter",
        "when": "focusedView == ralph.prdExplorer && viewItem == prdItem"
      },
      {
        "command": "ralph.deleteItem",
        "key": "delete",
        "mac": "cmd+backspace",
        "when": "focusedView == ralph.prdExplorer && viewItem == prdItem"
      }
    ],
    "configuration": {
      "title": "Mikey",
      "properties": {
        "mikey.promptTemplate": {
          "type": "string",
          "default": "prompts/default.txt",
          "description": "Path to the prompt template file to use when starting work on items (relative to workspace root)"
        },
        "ralph.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging in the Ralph output channel"
        },
        "ralph.prdFilePath": {
          "type": "string",
          "default": "plans/prd.json",
          "description": "Path to the PRD JSON file (relative to workspace root)"
        },
        "ralph.skillsDirectory": {
          "type": "string",
          "default": "skills",
          "description": "Directory containing skill reference files"
        },
        "ralph.testSkillsDirectory": {
          "type": "string",
          "default": "test/skills",
          "description": "Directory containing test skill files"
        },
        "ralph.promptsDirectory": {
          "type": "string",
          "default": "prompts",
          "description": "Directory containing prompt templates"
        },
        "ralph.featureBranchPrefix": {
          "type": "string",
          "default": "feature/",
          "description": "Prefix for feature branches created when starting work on items"
        },
        "ralph.mainBranch": {
          "type": "string",
          "default": "main",
          "description": "Name of the main/default branch for git operations"
        },
        "ralph.categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "setup",
            "ui",
            "functional",
            "git",
            "agent",
            "polish",
            "test",
            "refactor",
            "quality",
            "security",
            "Bug",
            "Action",
            "Docs",
            "Audit"
          ],
          "description": "Available categories for PRD items. Customize this list to match your project's needs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run esbuild-base -- --production",
    "esbuild-base": "node esbuild.mjs",
    "compile": "pnpm run esbuild-base",
    "watch": "node esbuild.mjs --watch",
    "typecheck": "tsc --noEmit",
    "pretest": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'src/test/suite/**/*.test.ts'",
    "build": "vsce package --out build",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.109.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "mocha": "^11.7.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
